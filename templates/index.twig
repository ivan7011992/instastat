{% extends 'base.twig' %}

{% block head %}
    {{ parent() }}
    <style>
        .adf {

        }
    </style>
{% endblock %}

{% block body %}

    <table>
        {% for profile in profiles %}
            <tr>
                {{ profile['user_link'] }}
            </tr>
        {% endfor %}
    </table>


    <form method="POST" enctype="multipart/form-data" action="index.php">
        <div class="form-group">
            <label for="user_link">Аккаунт</label>
            <input name="user_link" type="text" class="form-control" id="exampleInputEmail1"
                   aria-describedby="emailHelp"
                   placeholder="Enter email" value="{{ formData['user_link'] }}">
            {% if errors['user_link'] is defined  %}
                <p> {{ errors['user_link'] }}</p>
            {% endif %}
        </div>




        <button type="submit" class="btn btn-primary">Submit</button>

    </form>

{% endblock %}
